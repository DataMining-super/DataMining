    <select id="queryArea" resultMap="areaMap">
        select  * from
        tb_affiliation
        order by
        (counts+0)
        desc
        limit
        0,10;
    </select>
    <resultMap id="areaMap" type="com.swpu.pojo.Area">

    </resultMap>

    <select id="invaderInfo" resultMap="visitorMap">
        select * from
        tb_visitorinfo
        order by
